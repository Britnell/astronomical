<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <style is:global lang="scss">
      //  this is the css used for tabs components
      :where(.tab0, .tab1, .tab2) .tab {
        display: none;
      }
      .tab0 .tab:nth-child(1) {
        display: block;
      }
      .tab1 .tab:nth-child(2) {
        display: block;
      }
      .tab2 .tab:nth-child(3) {
        display: block;
      }
    </style>
    <a href="/">Back</a>
    <QTabs />
  </body>
</html>
