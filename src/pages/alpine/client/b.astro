---
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.5/dist/cdn.js"
    ></script>
    <ViewTransitions />
  </head>
  <body>
    <h1>Page B</h1>
    <p>Alpine issues wieh client side routing</p>
    <script is:inline>
      document.addEventListener("alpine:init", () => {
        Alpine.data("count", () => ({
          val: 1,
          count() {
            this.val += 1;
            const valid = this.val % 2 === 0;
            console.log(this.val, valid);
          },
        }));
      });
    </script>
    <section x-data="count">
      <label>Counter : </label>
      <button @click="count" class="bg-gray-300">+1</button>
      <p>Your count: <span x-text="val"></span></p>
    </section>
    <a href="/alpine/client/a" class="bg-gray-300">{"go to A"}</a>
  </body>
</html>
